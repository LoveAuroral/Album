<?xml version="1.0" encoding="utf-8"?>
<auroral.widget.view.album.view.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#999999"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_camera"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/alb_camera_icon" />

    <TextView
        android:id="@+id/tv_title_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_camera"
        android:layout_centerHorizontal="true"
        android:text="拍摄"
        android:textColor="@color/alb_white" />
</auroral.widget.view.album.view.SquareRelativeLayout>